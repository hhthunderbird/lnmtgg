{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,       // If you have .js files
    "checkJs": true,       // Disable if you donâ€™t want JS type-checking
  },
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "src/test/**/*"]
}